

<div class="layout_short arc_<?php echo $this->archive->id; ?> block<?php echo $this->class; ?>">
 	  
	<div class="panel <?php if (strpos($this->classList, 'panel-') === false ): echo 'panel-default '.$this->classList;  else: echo $this->classList; endif ?>">
	
		<div class="panel-heading">
			<h3 class="panel-title">
				<span class="label label-primary pull-right">
					<?php if($this->featured) :?><span class="glyphicon glyphicon-star"></span><?php endif ?>
				    <time datetime="<?php echo $this->datetime; ?>">
				    <?php if($this->date): ?>
				    	<?php echo $this->date; ?>
				    <?php else: ?>	
				    	<?php echo $this->parseDate($GLOBALS['TL_CONFIG']['datimFormat'], $this->timestamp); ?>
				    <?php endif ?>	
				    </time> 
				</span>
				<?php echo $this->newsHeadline; ?><br>
				<?php if ($this->hasSubHeadline): ?>
					<small class="lead"><?php echo $this->subHeadline; ?></small>
				<?php endif; ?>
			</h3>
		</div>

		<?php if ($this->hasMetaFields): ?>	
			<div class="popover-title clearfix">
					<?php if($this->date): ?><time datetime="<?php echo $this->datetime; ?>"><span class="glyphicon glyphicon-time"></span> <?php echo $this->date; ?></time><?php endif; ?>
					<span class="pull-right">
						<?php if($this->author): ?><span class="glyphicon glyphicon-user"></span> <?php echo $this->author; ?><?php endif; ?> <?php echo $this->commentCount; ?>
		            </span> 
			</div>
		<?php endif; ?>	

		<div class="panel-body clearfix">
				
		  <?php echo $this->teaser; ?>
		  <?php if ($this->text || $this->teaser): ?>
		    <a class="btn btn-default" href="<?php echo $this->link; ?>"><?php echo $GLOBALS['TL_LANG']['MSC']['more']; ?></a>
		  <?php endif; ?>
		</div>






	</div>	
	
</div>
