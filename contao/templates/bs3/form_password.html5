<?php $this->extend('form_row_double'); ?>


<?php $this->block('label'); ?>
  <?php if ($this->label): ?>
    <label for="ctrl_<?= $this->id; ?>" class="col-sm-4 control-label <?php if ($this->class): ?><?= $this->class; ?><?php endif; ?>">
      <?php if ($this->mandatory): ?>
         <?= $this->label; ?> <span class="hidden"><?= $this->mandatoryField; ?></span> <span class="mandatory">*</span>
      <?php else: ?>
        <?= $this->label; ?>
      <?php endif; ?>
    </label>  
  <?php endif; ?>
<?php $this->endblock(); ?>


<?php $this->block('field'); ?>
		   <input type="password" name="<?= $this->name; ?>" id="ctrl_<?= $this->id; ?>" class="form-control <?php if ($this->class) echo ' ' . $this->class; ?>" value=""<?= $this->getAttributes(); ?>>
		   <?php if ($this->hasErrors()): ?>
		    <span class="label label-danger"><?= $this->getErrorAsString(); ?></span>
		  <?php endif; ?>
<?php $this->endblock(); ?>




<?php $this->block('label2'); ?>
  <?php if ($this->confirmLabel): ?>
