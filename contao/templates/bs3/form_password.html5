		     <input type="password" name="<?= $this->name; ?>_confirm" id="ctrl_<?= $this->id; ?>_confirm" class="form-control <?php if ($this->class) echo ' ' . $this->class; ?>" value=""<?= $this->getAttributes(); ?>>
