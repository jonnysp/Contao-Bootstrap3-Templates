      <?php if ($this->mandatory): ?>
         <?= $this->confirmLabel; ?> <span class="hidden"><?= $this->mandatoryField; ?></span> <span class="mandatory">*</span>
      <?php else: ?>
        <?= $this->confirmLabel; ?>
      <?php endif; ?>
    </label>  
  <?php endif; ?>
<?php $this->endblock(); ?>



<?php $this->block('field2'); ?>
		 <?php if ($this->addSubmit): ?>
