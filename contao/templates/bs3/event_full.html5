
<div class="event layout_full block">


<div class="panel <?php if (strpos($this->class, 'panel-') === false ): echo 'panel-default '.$this->class;  else: echo $this->class; endif ?>">

	<div class="panel-heading">

			<h3 class="panel-title">
				<span class="label label-primary pull-right">
				    <time datetime="<?php echo $this->datetime; ?>">
				    <?php if($this->date): ?>
				    	<?php echo $this->date; ?>
				    <?php else: ?>	
				    	<?php echo $this->parseDate($GLOBALS['TL_CONFIG']['datimFormat'], $this->timestamp); ?>
				    <?php endif ?>	
				    </time> 
				</span>
				<?php echo $this->title; ?>
			</h3>
	</div>

	<div class="popover-title clearfix">
	
		  <?php if ($this->location): ?>
		  	<div class="pull-right"><span class="glyphicon glyphicon-map-marker"></span> <?php echo $this->locationLabel; ?>: <?php echo $this->location; ?></div>
		  <?php endif; ?>

		  <?php if ($this->recurring): ?>
		    <span class="badge"><?php echo $this->recurring; if ($this->until): ?> <?php echo $this->until; endif; ?>.</span>
		  <?php endif; ?>
	</div>


	<div class="panel-body clearfix">

	  <?php if ($this->details): ?>
	    <?php echo $this->details; ?>
	  <?php else: ?>
	    <div class="ce_text block">
	      <?php echo $this->teaser; ?>
	    </div>
	  <?php endif; ?>


	  <?php if ($this->enclosure): ?>
	    <div class="enclosure">
	      <?php foreach ($this->enclosure as $enclosure): ?>
	        <p><img src="<?php echo $enclosure['icon']; ?>" width="18" height="18" alt="<?php echo $enclosure['mime']; ?>" class="mime_icon"> <a href="<?php echo $enclosure['href']; ?>" title="<?php echo $enclosure['title']; ?>"><?php echo $enclosure['link']; ?> <span class="size">(<?php echo $enclosure['filesize']; ?>)</span></a></p>
	      <?php endforeach; ?>
	    </div>
	  <?php endif; ?>


	</div>


</div>















</div>
