
<div class="layout_latest arc_<?= $this->archive->id; ?> block <?= $this->class; ?>">
 	  
	<div class="panel <?php if (strpos($this->classList, 'panel-') === false ): echo 'panel-default '.$this->classList;  else: echo $this->classList; endif ?>">
	
		<div class="panel-heading">
			<h3 class="panel-title">
				<span class="label label-primary pull-right">
					<?php if($this->featured) :?><span class="glyphicon glyphicon-star"></span><?php endif ?>
				    <time datetime="<?= $this->datetime; ?>">
				    <?php if($this->date): ?>
				    	<?= $this->date; ?>
				    <?php else: ?>	
				    	<?= $this->parseDate($GLOBALS['TL_CONFIG']['datimFormat'], $this->timestamp); ?>
				    <?php endif ?>	
				    </time> 
				</span>
				<?= $this->newsHeadline; ?><br>
				<?php if ($this->hasSubHeadline): ?>
					<small class="lead"><?= $this->subHeadline; ?></small>
				<?php endif; ?>
			</h3>
		</div>

		<?php if ($this->hasMetaFields): ?>	
			<div class="popover-title clearfix">
					<?php if($this->date): ?><time datetime="<?= $this->datetime; ?>"><span class="glyphicon glyphicon-time"></span> <?= $this->date; ?></time><?php endif; ?>
					<span class="pull-right">
						<?php if($this->author): ?><span class="glyphicon glyphicon-user"></span> <?= $this->author; ?><?php endif; ?> <?= $this->commentCount; ?>
		            </span> 
			</div>
		<?php endif; ?>	

		<div class="panel-body clearfix">

			<?php if (!$this->addBefore): ?>
			    	<?= $this->teaser; ?>
			<?php endif; ?>
		
				<?php 
					if(strpos($this->floatClass, 'float_left') !== false ){
						$this->floatClass = 'pull-left';
					}elseif(strpos($this->floatClass, 'float_right') !== false ){
						$this->floatClass = 'pull-right';
					}else{
						$this->floatClass = '';
					}
				?>
		
				  <?php if ($this->addImage): ?>
				    <figure class="img-thumbnail <?= $this->floatClass; ?>" style="<?= $this->margin; ?>">
				      <?php if ($this->href): ?>
				        <a  href="<?= $this->href; ?>"  <?php if ($this->linkTitle): ?> title="<?= $this->linkTitle; ?>"<?php endif; ?>   <?= $this->attributes; ?> data-title="<?= $this->alt; ?>" data-footer="<?= $this->caption; ?>" data-gallery="<?= $this->id ?>" >
				      <?php endif; ?>
				      <img class="img-responsive" src="<?= $this->src; ?>"<?= $this->imgSize; ?> alt="<?= $this->alt; ?>"<?php if ($this->title): ?> title="<?= $this->title; ?>"<?php endif; ?>>
				      <?php if ($this->href): ?>
				        </a>
				      <?php endif; ?>
				      <?php if ($this->caption): ?>
				        <div class="caption" style="margin:5px 0 4px 0;text-align:center;"><?= $this->caption; ?></div>
				      <?php endif; ?>
				
				    </figure>
				  <?php endif; ?>
				
			<?php if ($this->addBefore): ?>
				    <?= $this->teaser; ?>
			<?php endif; ?>


		  <?php if ($this->text || $this->teaser): ?>
		    <a class="btn btn-default" href="<?= $this->link; ?>"><?= $GLOBALS['TL_LANG']['MSC']['more']; ?></a>
		  <?php endif; ?>
		</div>
		 



	</div>
	
</div>


